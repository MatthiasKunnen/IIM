@model IEnumerable<IIM.ViewModels.MaterialViewModel>

@{
    ViewBag.Title = "Winkelwagen";
    ViewBag.Active = "Cart";
}

<h2>@ViewBag.Title</h2>

<div class="clearfix">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Acties
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 15%;">
                    <img src="@Url.Content(item.PhotoUrl)" class="img-rounded " style="width: 75%; height: auto;" alt="Foto van @Html.DisplayFor(modelItem => item.Name)" />
                </td>
                <td>
                    <h4>@Html.ActionLink(item.Name, "Detail", "Inventory",  new { id = item.Id })</h4>
                </td>
                <td>
                @using (Html.BeginForm("Remove", "Cart", new { id = item.Id }))
                {
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-shopping-  "></span> Verwijder uit verlanglijst
                </button>
                }
                </td>
            </tr>
        }
    </table>
</div>