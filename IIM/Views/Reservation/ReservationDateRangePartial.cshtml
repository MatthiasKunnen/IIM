@model IIM.ViewModels.ReservationViewModels.NewReservationViewModel
@Html.BeginForm("ChangeReservationRange", "Reservation", FormMethod.Post, new { @class = "form-inline" }){
    <label class="sr-only" for="startDate">Startdatum:</label>
    <input type="datetime" class="form-control" id="startDate" name="startDate" placeholder="Startdatum" value="@Model.StartDate" />
    @if (@ViewBag.DateFieldAmount ?? 1 == 2)
    {
        <label class="sr-only" for="endDate">Einddatum:</label>
        <input type="datetime" class="form-control" id="endDate" name="endDate" placeholder="Einddatum"  value="@Model.EndDate"/>
    }
    <input type="submit" class="btn btn-default" value="Vernieuw filter" />
}