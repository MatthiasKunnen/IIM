@model IEnumerable<IIM.ViewModels.ReservationViewModels.ReservationDetailViewModel>
    


<table class="ReservatieDetail table">
    <tr>
        <th class="">
            
        </th>
        <th class="ReservatieDetail">
            @Html.DisplayNameFor(model => model.Material.Name)
        </th>
        <th class="ReservatieDetail">
            @Html.DisplayNameFor(model => model.PickUpDate)
        </th>
        <th class="ReservatieDetail">
            @Html.DisplayNameFor(model => model.BroughtBackDate)
        </th>
        <th class="ReservatieDetail">
            
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <p class="imgCenter"><img src="@Url.Content(item.Material.PhotoUrl)" class="img-rounded " style="max-width: 150px; max-height: 100px;" alt="Foto van @Html.DisplayFor(modelItem => item.Material.Name)" /></p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material.Name)
            </td>
            <td>
                @if (item.PickUpDate.Equals(new DateTime(01, 01, 01)))
                {
                    <p>Nog op te halen</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.PickUpDate)
                }
            </td>
            <td>
                @if (item.BroughtBackDate.Equals(new DateTime(01, 01, 01)))
                {
                    <p>Nog terug te brengen</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.BroughtBackDate)
                }
            </td>
            <td>
                @if (item.PickUpDate.Equals(new DateTime(01,01,01)))
                {
                    using (Html.BeginForm("DeleteIdentifier", "Reservation", new { mat_Id = item.MaterialIdentifier.Id, rId = item.ReservationId }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    }
                }
                
            </td>
      </tr>
    }
</table>

