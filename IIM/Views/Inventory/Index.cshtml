@using IIM.ViewModels
@model IEnumerable<MaterialViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Materialen</h2>

<div class="wrap">
    <div class="table">
        <ul>
            @foreach (var item in Model)
            {
                <li class="materialList">
                    <div class="top">
                        <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
                        <div>
                            <img class="circle" src="@Html.DisplayFor(modelItem => item.PhotoUrl ?? "~/Content/photo-coming-soon.jpg")" alt="@Html.DisplayFor(modelItem => item.Name)" />
                        </div>
                    </div>
                    <div class="bottom">
                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        <p>@Html.DisplayFor(modelItem => item.TargetGroups)</p>
                        <p>@Html.DisplayFor(modelItem => item.Price)</p>
                        <div class="sign">
                            <a href='#' class='button'>Voeg toe aan verlanglijstje</a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
