@model IEnumerable<IIM.ViewModels.MaterialViewModel>

@if (Model != null && Model.Any())
{
    <div class="clearfix">
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.PhotoUrl)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>Acties</th>
            </tr>

            @foreach (var item in Model)
                {
                <tr class="material">
                    <td class="text-center">
                        <img src="@Url.Content(item.PhotoUrl)" class="img-rounded" alt="Foto van @Html.DisplayFor(modelItem => item.Name)" />
                    </td>
                    <td>@Html.ActionLink(item.Name, "Detail", new { id = item.Id }, new { target = "_blank" })</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.Partial("_Button", item)</td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <p>Er zijn geen materialen gevonden.</p>
}
